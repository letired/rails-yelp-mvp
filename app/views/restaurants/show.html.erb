<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h2><%= @restaurant.name %></h2>
      <p>Address: <%= @restaurant.address %></p>
      <p>Phone: <%= @restaurant.phone_number %></p>
      <h3>Reviews of <%= @restaurant.name %>:</h3>
      <hr>
      <% @restaurant.reviews.each do |review| %>
        <h4>Rating: <%= review.rating %></h4>
        <p><%= review.content %></p>
        <hr>
      <% end %>
      <%= render template: "reviews/_form" %>
    </div>
  </div>
</div>
