
<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1>Our Restaurants:</h1>
    </div>
    <div class="col-xs-12">
      <% @restaurants.each do |restaurant| %>
        <div class="row">
          <div class="col-xs-6">
            <h2><%= link_to restaurant.name, restaurant %></h2>
            <p><%= restaurant.address %></p>
            <p><%= restaurant.phone_number %></p>
            <hr>
          </div>
          <div class="col-xs-6">
            <div class="">
              <img src="https://unsplash.it/100?random" alt="" class="img-circle">
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
