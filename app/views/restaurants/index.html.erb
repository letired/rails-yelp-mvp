<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1>Our Restaurants:</h1>
    </div>
    <div class="col-xs-12">
      <% @restaurants.each do |restaurant| %>
        <div class="row">
          <div class="col-xs-6">
            <div class="text-left">
              <h3><i class="fa fa-cutlery" aria-hidden="true"></i> <%= link_to restaurant.name, restaurant %></h3>
              <p><i class="fa fa-map-marker" aria-hidden="true"></i> <%= restaurant.address %></p>
              <p><i class="fa fa-mobile" aria-hidden="true"></i> <%= restaurant.phone_number %></p>
              <p><i class="fa fa-question" aria-hidden="true"></i> <%= restaurant.category.capitalize %></p>
              <p>Average Review: <%= average_review(restaurant) %>/5</p>
              <hr>
            </div>
          </div>
          <div class="col-xs-6">
            <div id="design" class="text-center">
              <img src="https://unsplash.it/150" alt="" class="img-circle">
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <%= render template: "restaurants/_form" %>
  </div>
</div>
